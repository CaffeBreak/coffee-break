generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Player {
  id     String  @id // プレイヤーID One Game Token
  name   String // プレイヤー名
  Room   Room    @relation(fields: [roomId], references: [id]) // プレイヤーが参加している部屋
  roomId String
  role   Role
  isDead Boolean // プレイヤーの生死
  chat   Chat[]
  cards  Card[]
}

model Room {
  id       String    @id // 部屋ID
  password String // 合言葉
  players  Player[] // 部屋に参加しているプレイヤー
  cards    Card[]
  state    RoomState // 部屋の状態 現在のフェーズとか
}

model Chat {
  id        String   @id // チャットID
  player    Player   @relation(fields: [playerId], references: [id]) // 発言をしたプレイヤー
  playerId  String
  message   String // 発言内容
  createdAt DateTime @default(now())
}

model Card {
  id       String   @id
  room     Room     @relation(fields: [roomId], references: [id]) // カードが所属する部屋
  roomId   String
  player   Player   @relation(fields: [playerId], references: [id]) // カードを所持しているプレイヤー
  playerId String
  name     String // 使用したカードの名前 存在しないカード名をここに淹れるとまずい
  isUsed   Boolean // カードが使用されたか
  turn     Int? // カードが使用されたターン(日)
  isNight  Boolean? // 夜かどうか
}

enum Role {
  VILLAGER // 村人
  WEREWOLF // 人狼
}

enum RoomState {
  WAITING // 参加者待ち
  USING // カード行使
  DISCUSSION // 議論
  VOTING // 投票中
  FINISHING // ゲーム終了後
}
